{
  "name": "mobile-store-server",
  "version": "1.0.0",
  "description": "Backend API for Mobile Store",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && npm run copy:assets",
    "copy:assets": "node -e \"require('fs').mkdirSync('dist/db', {recursive: true}); require('fs').copyFileSync('src/db/schema.sql', 'dist/db/schema.sql')\"",
    "start": "node dist/server.js",
    "start:prod": "npm run db:setup:prod && node dist/server.js",
    "db:init": "tsx src/db/init.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:setup": "tsx src/db/setup.ts",
    "db:setup:prod": "node dist/db/setup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "better-sqlite3": "^9.2.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

